/* pages/news.wxss */
.newsContainer{
  height: 100vh;
  background: #f5f5f5;
}
.newsBg{
  width: 100%;
  height: 350rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.newsBg image{
  width: 100%;
}
.title{
  display: block;
  font: 36rpx/80rpx arial;
  text-align: center;
  margin-top: 30rpx;
}
.newsTime{
  display: block;
  font: 30rpx/80rpx arial;
  color: #666;
  padding: 0 30rpx;
  text-align: right;
}
.newsContent{
  display: block;
  font: 30rpx/80rpx arial;
  text-indent: 2em;
  padding: 0 30rpx;
}



